<div class="yg-container">
  <div class="yg-row yg-space-around">
    {{#eg-card title=model.name}}
      <p>{{model.description}}</p>

      <div class="course-actions">
        {{#unless model.purchased}}
          {{#link-to "course-purchase" model class="btn btn--success btn--small" }}
            Purchase {{format-money (cents-to-dol model.price)}}
          {{/link-to}}
        {{/unless}}
      </div>

      {{#card-list title="Lessons" as |list|}}
        {{#each (sort-by "position" model.lessons) as |lesson|}}
          {{#list.item}}
            {{#if lesson.isLoaded}}
              {{lesson.title}} - {{sec-to-human lesson.time}}
            {{else}}
              {{fa-icon "spinner" pulse=true size="lg" class="fa--center"}}
            {{/if}}
          {{/list.item}}
        {{/each}}
      {{/card-list}}
    {{/eg-card}}
  </div>
</div>
